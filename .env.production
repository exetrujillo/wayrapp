# Production Environment Variables Template
# Copy these to your Vercel Dashboard Environment Variables

# Database Configuration (Required)
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# JWT Configuration (Required - Generate secure secrets)
JWT_SECRET="your-production-jwt-secret-minimum-32-characters"
JWT_REFRESH_SECRET="your-production-jwt-refresh-secret-minimum-32-characters"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV="production"

# CORS Configuration (Update with your frontend domains)
CORS_ORIGIN="https://your-frontend-domain.com,https://www.your-frontend-domain.com"

# Rate Limiting (Production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging (Production settings)
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Security
BCRYPT_ROUNDS=12

# Performance and Monitoring Configuration
DB_CONNECTION_LIMIT=10
DB_POOL_TIMEOUT=10
DB_SCHEMA_CACHE_SIZE=1000
CACHE_MAX_SIZE=1000
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000