{
  "name": "wayrapp",
  "version": "1.0.0",
  "description": "WayrApp - Open-source language learning platform",
  "author": "Exequiel Trujillo",
  "license": "MIT",
  "private": true,
  "main": "dist/server.js",
  "workspaces": [
    "frontend-shared"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:shared": "npm run build --workspace=wayrapp-shared",
    "build:all": "npm run build && npm run build:shared",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "postinstall": "prisma generate",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:backend": "npm run test:unit && npm run test:integration",
    "deploy:vercel": "vercel --prod"
  },
  "keywords": [
    "language-learning",
    "education",
    "api",
    "nodejs",
    "typescript",
    "postgresql"
  ],
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "xss": "^1.0.15",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^2.8.8",
    "prisma": "^6.12.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
