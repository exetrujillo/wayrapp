{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/modules/*": ["modules/*"],
      "@/shared/*": ["shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/shared/types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/shared/test"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}