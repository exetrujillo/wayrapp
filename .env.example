# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/wayrapp_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_REFRESH_SECRET="your-super-secure-jwt-refresh-secret-key-here"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="https://wayrapp.vercel.app/"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
# info for production, debug for development
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Security
BCRYPT_ROUNDS=12

# Performance and Monitoring Configuration
# Database connection pool settings
DB_CONNECTION_LIMIT=10
DB_POOL_TIMEOUT=10
DB_SCHEMA_CACHE_SIZE=1000

# Cache configuration
CACHE_MAX_SIZE=1000

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000